# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-5.2
AZURE_OPENAI_API_VERSION=2024-07-01-preview

# Authentication
# Set this to enable bearer token authentication on all API routes
# Generate a secure token: openssl rand -base64 32
# If not set, authentication is disabled (development mode)
AUTH_SECRET_TOKEN=

# Database
DATABASE_URL=file:./data/resume-enhancer.db

# File Storage
# SECURITY: Store uploads outside public/ to prevent direct URL access
# Files are served through authenticated API routes
UPLOAD_DIR=./data/uploads
EXPORT_DIR=./data/exports
MAX_FILE_SIZE_MB=10

# Logging
# Log levels: debug, info, warn, error
# Defaults to "warn" in production, "debug" in development
LOG_LEVEL=info

# Web Search (optional - falls back to DuckDuckGo if not configured)
# Get your free API key at https://brave.com/search/api/
BRAVE_SEARCH_API_KEY=
